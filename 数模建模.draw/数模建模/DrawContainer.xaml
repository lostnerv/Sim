<Window x:Class="数模建模.DrawContainer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DrawContainer" Height="800" Width="800">
    <Grid>
        <Canvas x:Name="canvesprt1" Background="White"  ZIndex="-1"
                             Grid.Row="1" Grid.Column="0" MouseWheel="canves1_MouseWheel_prt"  >
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Canvas.RenderTransform>
        </Canvas>
    </Grid>
</Window>
